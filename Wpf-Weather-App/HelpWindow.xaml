<Window x:Name="window_Help" x:Class="Wpf_Weather_App.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Weather_App"
        mc:Ignorable="d"
        Title="Help" Height="300" Width="800" Loaded="window_Help_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="80"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbl_Title" Content="How to Use the Weather App" Grid.Column="0" Background="#FF193A70" Foreground="White" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lbl_HelpText" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="14" Grid.Row="1" Margin="20" Width="Auto" Height="Auto"/>
        <Button x:Name="btn_Close"  Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="45" Width="140"  Grid.Row="2"  FontSize="14" BorderBrush="Black" Foreground="White" Background="#FF193A70" Click="Button_Click"/>
    </Grid>
</Window>
