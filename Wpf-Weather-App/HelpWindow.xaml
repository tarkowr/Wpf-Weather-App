<Window x:Name="window_Help" x:Class="Wpf_Weather_App.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Weather_App"
        mc:Ignorable="d"
        Title="HelpWindow" Height="310.5" Width="800" Loaded="window_Help_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbl_Title" Content="How to Use the Weather App" Grid.Column="1" Background="#FF193A70" Foreground="White" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lbl_HelpText" Content="Label" HorizontalAlignment="Stretch" Margin="30,80,30,-100" VerticalAlignment="Top" Width="Auto" Height="Auto" FontSize="14"/>
        <Button Content="Close" HorizontalAlignment="Center" Height="45" Margin="0,214,0,-214" Width="140" BorderBrush="Black" Foreground="White" Background="#FF193A70" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</Window>
